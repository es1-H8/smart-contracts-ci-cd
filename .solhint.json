{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "no-empty-blocks": "warn",
    "no-inline-assembly": "warn",
    "not-rely-on-time": "warn",
    "avoid-low-level-calls": "warn",
    "avoid-call-value": "warn",
    "avoid-send": "warn",
    "avoid-sha3": "warn",
    "avoid-suicide": "warn",
    "avoid-throw": "warn",
    "avoid-tx-origin": "warn",
    "check-send-result": "warn",
    "compiler-fixed": "warn",
    "compiler-gt-0_4": "warn",
    "compiler-lt-0_9": "warn",
    "compiler-version": "warn",
    "const-name-snakecase": "warn",
    "contract-name-camelcase": "warn",
    "event-name-camelcase": "warn",
    "func-name-mixedcase": "warn",
    "func-param-name-mixedcase": "warn",
    "imports-on-top": "warn",
    "max-line-length": "warn",
    "no-complex-fallback": "warn",
    "no-constant": "warn",
    "no-contract-deployer": "warn",
    "no-empty-blocks": "warn",
    "no-inline-assembly": "warn",
    "no-invalid": "warn",
    "no-multiple-inheritance": "warn",
    "no-pragma": "warn",
    "no-simple-event-func-name": "warn",
    "no-strings": "warn",
    "no-throw": "warn",
    "no-var": "warn",
    "not-rely-on-time": "warn",
    "one-contract-per-file": "warn",
    "quotes": "warn",
    "reason-string": "warn",
    "visibility-modifier-order": "warn"
  }
} 